@model AddUserDto

@{
    Layout = null;
}


<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Register Page</title>
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="~/adminweb/assets/images/favicon.png">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
    <link href="~/adminweb/css/style.css" rel="stylesheet">

</head>

<body class="h-100">

<div class="login-form-bg h-100">
    <div class="container h-100">
        <div class="row justify-content-center h-100">
            <div class="col-xl-6">
                <div class="form-input-content">
                    <div class="card login-form mb-0">
                        <div class="card-body pt-5">
                            <a class="text-center" href="index.html">
                                <h4>Hotel Register Page</h4>
                            </a>
                            <form class="mt-5 mb-5 login-input" method="post" asp-controller="Register" asp-action="Index">
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Name" asp-for="Name" required>
                                    <span asp-validation-for="Name" class="text-warning"></span>
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Surname" asp-for="Surname" required>
                                    <span asp-validation-for="Surname" class="text-warning"></span>
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Username" asp-for="Username" required>
                                    <span asp-validation-for="Username" class="text-warning"></span>
                                </div>
                                <div class="form-group">
                                    <input type="email" class="form-control" placeholder="Email" asp-for="Mail" required>
                                    <span asp-validation-for="Mail" class="text-warning"></span>
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control" placeholder="Password" asp-for="Password" required>
                                    <span asp-validation-for="Password" class="text-warning"></span>
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control" placeholder="Confirm Password" asp-for="ConfirmPassword" required>
                                    <span asp-validation-for="ConfirmPassword" class="text-warning"></span>
                                </div>
                                <button class="btn login-form__btn submit w-100">Register</button>
                            </form>
                            <p class="mt-5 login-form__footer">Have account? <a asp-controller="Login" asp-action="Index" class="text-primary">Sign In </a> now</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<!--**********************************
Scripts
***********************************-->
<script src="~/adminweb/plugins/common/common.min.js"></script>
<script src="~/adminweb/js/custom.min.js"></script>
<script src="~/adminweb/js/settings.js"></script>
<script src="~/adminweb/js/gleek.js"></script>
<script src="~/adminweb/js/styleSwitcher.js"></script>
</body>