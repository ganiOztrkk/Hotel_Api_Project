@model AddServiceDto

@{
    ViewBag.Title = "AddService";
    Layout = "AdminLayout/_AdminLayout";
}

<form method="post" asp-controller="Service" asp-action="AddService">
    <label>Service Title</label>
    <input type="text" asp-for="Title" class="form-control">
    <span asp-validation-for="Title" class="text-danger"></span>
    <br>
    <label>Service Description</label>
    <input type="text" asp-for="Description" class="form-control">
    <span asp-validation-for="Description" class="text-danger"></span>
    <br>
    <label>Service Icon Url</label>
    <input type="text" asp-for="ServiceIcon" class="form-control">
    <span asp-validation-for="ServiceIcon" class="text-danger"></span>
    <br>
    <button class="btn btn-primary">Add Service</button>
</form>